from tkinter import*

def indice(x):

    if x==4:

        aide="Si on mange que ça, on meurt"

    elif x==3:

        aide="La première lettre du mot est R"

    elif x==2:

        aide="Le mot est en 4 lettres"

    elif x==1:

        aide="C'est un antonyme de 'tout'"

    return aide

def réponse():
    entree_reponse.configure(text="votre réponse est "+entree.get())        #recuperer le champ entré

def verification():
    i=5

    while i>=0:

        if entree.get()=="rien":

            lab3=Label(fen_enigme, text="Bravo!! en effet rien n'est mieux que Dieu, rien n'est pire que le diable, les pauvres n'ont rien et les riches ont besoin de rien")

            lab3.pack()

            lab4=Label(fen_enigme, text="Voici le 3ème chiffre du code: 0000 ")

            lab4.pack()

            i-=5

        else:

            lab5=Label(fen_enigme, text="Non ce n'est pas ça, il vous reste" + str(i-1) + "chances. Voici un indice" + indice(i-1))
            lab5.pack()

            i-=1


fen_enigme=Tk()


lab1=Label(fen_enigme, text="Bienvenue! Si vous voulez gagner un indice il vous faudra répondre à cette égnime, c'est mieux que Dieu, pire que le diable, les pauvres l'ont, les riches en ont besoin...")
lab1.pack()

lab2=Label(fen_enigme, text="Quelle est la réponse?")
lab2.pack()

entree= Entry(fen_enigme)
entree.pack()

bouton = Button(fen_enigme, text="validez votre réponse", command = verification)
bouton.pack()






fen_enigme.mainloop()
