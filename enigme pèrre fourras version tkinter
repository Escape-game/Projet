from tkinter import*

def indice(x):

    if x==5:

        print("Si on mange que ça, on meurt")

    elif x==4:

        print("La première lettre du mot est R")

    elif x==3:

        print("Le mot est en 4 lettres")

    elif x==2:

        print("C'est un antonyme de 'tout'")

    else:

        print("le mot rime avec 'chien'")


def reponse():
    entree_reponse.configure(text="Quel est la réponse?"+entree_reponse.get())        #recuperer le champ entré



fen_enigme=Tk()

lab1=Label(fen_enigme, text="Bienvenue! Si vous voulez gagner un indice il vous faudra répondre à cette égnime, c'est mieux que Dieu, pire que le diable, les pauvres l'ont, les riches en ont besoin...")
lab1.pack()

lab2=Label(fen_enigme, text="Quelle est la réponse?")
lab2.pack()

entree_reponse= Entry(fen_enigme)

entree_reponse.place(x=735, y=350)

i=5

while i>=0:

    if entree_reponse.get()=="rien":

        lab3=Label(fen_enigme, text="Bravo!! en effet rien n'est mieux que Dieu, rien n'est pire que le diable, les pauvres n'ont rien et les riches ont besoin de rien")

        lab3.pack()

        lab4=Label(fen_enigme, text="Voici le 3ème chiffre du code: 0000 ")

        lab4.pack()

        i-=5

    else:

        lab5=Label(fen_enigme, text="Non ce n'est pas ça, il vous reste,i-1,chance., Voici un indice, indice(i)")
        lab5.pack()

        i-=1




fen_enigme.mainloop()
