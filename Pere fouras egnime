def indice(x):
    if x==5:
        print("Si on en mange, on meurt")
    elif x==4:
        print("La première lettre du mot est R")
    elif x==3:
        print("Le mot est en 4 lettres")
    elif x==2:
        print("C'est un antonyme de 'tout'")
    else:
        print("le mot rime avec 'chien'")


i=5
print("Bienvenue! Si vous voulez gagner un indice il vous faudra répondre à cette égnime, c'est mieux que Dieu, pire que le diable, les pauvres l'ont, les riches en ont besoin...")

while i>0:
    reponse= input(print('Qui est-il?'))
    if reponse=="rien":
        print("Bravo!! en effet rien n'est mieux que Dieu, rien n'est pire que le diable, les pauvres n'ont rien et les riches ont besoin de rien")
        print("Voici le 3ème chiffre du code: 0000 ")
        i-=5
    else:
        print("Non ce n'est pas ça, il vous reste",i-1,"chance.", "Voici un indice", indice(i))
        i-=1

