from tkinter import *

def prénom(x):
    entree_nom.configure(text="Quel est ton nom?"+entree_nom.get())        #recuperer le champ entré

fen=Tk()
fen.resizable(width=False, height=False)             #l'utilsateur ne peut pas modifier la taille
fen.wm_state(newstate="zoomed")            #la fentre est en pleine ecran
fen.title("Première page")

etiquette=Label(fen, text="Escape Game", font=("Times",52), fg='black')
etiquette.pack()

etiquette2=Label(fen, text="Quel est ton nom?",font=("Arial",24), fg='black')
etiquette2.place(x=675, y=300)

entree_nom= Entry(fen)
entree_nom.place(x=735, y=350)
entree_nom.bind("<Return>",prénom)

bouton=Button(fen, text="Commencer le jeu", bg='white', fg='red')
bouton.place(x=750, y= 400)

fen.mainloop()
